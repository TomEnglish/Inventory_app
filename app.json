{
  "expo": {
    "name": "QR_Asset_Scanner",
    "slug": "QR_Asset_Scanner",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "qrassetscanner",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.qrassetscanner.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes on materials."
      }
    },
    "android": {
      "package": "com.qrassetscanner.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": ["CAMERA"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow QR Asset Scanner to access your camera for scanning QR codes."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
